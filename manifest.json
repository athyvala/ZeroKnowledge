{
  "manifest_version": 3,
  "name": "Session Sharer",
  "version": "2.0",
  "description": "Share your login sessions temporarily with automatic logout",
  "permissions": [
    "cookies",
    "activeTab", 
    "storage",
    "downloads",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*",
    "*://*.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Session Sharer"
  },
  "background": {
    "service_worker": "background.js"
  }
}