{
  "manifest_version": 3,
  "name": "Session Sharer",
  "version": "1.0",
  "description": "Share your login sessions temporarily without passwords",
  "permissions": [
    "cookies",
    "activeTab", 
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Session Sharer"
  },
  "background": {
    "service_worker": "background.js"
  }
}